<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style = "text-align: center;">Edit <%= snap.name %></h1>

        <div style = "width: 30%; margin: 25px auto;">
            <form action="/snaps/<%= snap._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= snap.name %>" name="snap[name]">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" value="<%= snap.image %>" name="snap[image]">
                </div>

                <div class="form-group">
                    <textarea name="snap[description]" class="form-control" id="" cols="30" rows="10"> <%= snap.description %> </textarea>
                </div>

                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-default btn-block">Submit</button>
                </div>
            </form>

            <a href="/snaps">Go Back</a>
        </div>

    </div>
</div>

<%- include("../partials/footer") %>